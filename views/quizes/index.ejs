<div id="index" class="pannel-container">

	<div class="navBar">
		<div>
			<form id="searchQuestion" method="GET" action="/quizes">
			  <input type="text" name="search" placeholder="Buscar pregunta"/>
				<input type="submit" value="Enviar"/>
			</form>
		</div>
		<a href = "/quizes/new"> <button type = "button"> Crear Pregunta </button></a>
	</div>

	<table>
		<% var i; for (i=0; i < quizes.length; i++){%>
		<tr>
		<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].categoria %></a></td>
		<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
		<td>
		<form method="post" action = "quizes/<%= quizes[i].id %>?_method=delete">
			<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');"> Borrar 
			</button> 
		</form>
		</td>
		</tr><% } %>
	</table>
	
</div>